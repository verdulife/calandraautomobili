---
import Logo from "@icons/Logo.astro";
import Divider from "@components/Divider.astro";
import Instagram from "@icons/Instagram.astro";
import Facebook from "@icons/Facebook.astro";
import Youtube from "@icons/Youtube.astro";
---

<footer
  class="flex justify-center w-full bg-gradient-to-r from-transparent from-10% via-zinc-900 to-transparent to-90% pt-[1px] mt-auto"
>
  <div class="flex justify-center w-full p-6 bg-black">
    <div class="flex items-center justify-center w-full max-w-6xl gap-12">
      <Logo />
      <Divider />
      <aside class="flex items-center grow">
        <p class="text-sm text-zinc-500">
          Copyright Â© 2023 Calandra Automobili S.L. 2023 All rights reserved.
          <br />

          <a class="transition hover:underline" href="/legal#privacy-policy">
            Privacy Policy</a
          > | <a class="transition hover:underline" href="/legal#terms-conditions"
            >Terms & Conditions
          </a>
        </p>

        <div class="flex gap-4 ml-auto">
          <a class="transition opacity-50 hover:opacity-100" href="#"><Instagram /></a>
          <a class="transition opacity-50 hover:opacity-100" href="#"><Facebook /></a>
          <a class="transition opacity-50 hover:opacity-100" href="#"><Youtube /></a>
        </div>
      </aside>
    </div>
  </div>
</footer>
