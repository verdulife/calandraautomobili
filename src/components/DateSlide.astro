---
interface Props {
  year: string;
  image: string;
}

const { year, image } = Astro.props;
---

<article class="flex flex-col items-center gap-2">
  <picture class="p-1 rounded-xl bg-zinc-800">
    <img
      class="h-40 bg-white rounded-lg shadow-xl shrink-0 md:h-60 aspect-video"
      src={image}
    />
  </picture>

  <h2 class="text-xl text-gray-300">
    {year}
  </h2>
</article>
