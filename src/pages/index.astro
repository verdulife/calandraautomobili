---
import Layout from "@layouts/Layout.astro";
import Strong from "@components/Strong.astro";
import Link from "@components/Link.astro";
import Pretitle from "@components/Pretitle.astro";
import DateCard from "@components/DateCard.astro";
import P from "@components/P.astro";
import Divider from "@components/Divider.astro";
import Reveal from "@components/Reveal.astro";

import { dates } from "family-passion";
---

<Layout title="Calandra Automobili">
  <section
    class="flex flex-col items-center w-full py-24 bg-[url('/shades3.png')] bg-no-repeat bg-cover"
  >
    <header class="flex flex-col gap-4 p-6 pt-20 lg:pt-28">
      <h1
        class="text-4xl font-normal leading-tight text-center text-gray-300 lg:text-6xl"
      >
        Track-<Strong>focused</Strong> supercar
        <br />
         for real <Strong>drivers</Strong>
      </h1>

      <P>
        40 years in Automotive Design. Please welcome Calandra Automobili to a
        newly revived era of pure sportscars.
      </P>
    </header>

    <main class="flex flex-wrap justify-center gap-4 mt-6 lg:mt-12">
      <Link href="#history">READ THE STORY</Link>
      <Link href="/prototype" secondary>PROTOTYPE P001</Link>
    </main>

    <footer class="-mt-2">
      <picture>
        <img class="max-w-6xl w-[130%]" src="/home-car.png" alt="P001" />
      </picture>
    </footer>
  </section>

  <section
    id="history"
    class="max-w-3xl flex flex-col items-center gap-8 mt-[-450px] pt-[450px] p-8 z-10"
  >
    <Pretitle>A CHILD WITH A DREAM</Pretitle>

    <Reveal>
      <h2 class="text-2xl leading-tight lg:text-4xl text-gray-50">
        Gaspare Vittorio Calandra has been working in the Automotive industry
        for over 40 years as a design engineer. He had a dream, build a street
        legal race car, so he decided to start this journey nearly 22 years ago.


        <br /><br />
         He is ready now to say that Calandra has become a new automotive brand
        to compete with some of the best in the world.
      </h2>
    </Reveal>
  </section>

  <section class="z-10 flex flex-col items-center max-w-3xl gap-6 py-28">
    <header class="pt-0 md:pt-20">
      <h2
        class="text-4xl font-normal leading-tight text-center text-gray-300 lg:text-6xl"
      >
        Family<Strong>passion</Strong>
      </h2>
    </header>

    <main class="p-8">
      <ul class="flex flex-col items-center gap-2">
        {
          dates.map(({ year, desc }) => (
            <>
              <li>
                <DateCard year={year}>
                  <Fragment set:html={desc} />
                </DateCard>
              </li>

              <Divider />
            </>
          ))
        }
      </ul>
    </main>

    <Link href="/beginning">TAKING DREAMS TO REALITY</Link>
  </section>
</Layout>
