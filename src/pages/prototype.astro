---
import Layout from "@layouts/Layout.astro";
import P from "@components/P.astro";
import Strong from "@components/Strong.astro";
import ProtoypeCard from "@components/CarCard.astro";

import { cards } from "prototype";
import { images } from "production-images";
import Gallery from "@components/Gallery.astro";
---

<Layout title="Heritage | Calandra Automobili">
  <section
    class="flex flex-col justify-center items-center w-full h-screen lg:h-[80vh] bg-[url('/video.jpg')] bg-no-repeat bg-cover bg-center"
  >
    <header class="flex flex-col gap-8 p-6">
      <h1
        class="text-4xl font-normal leading-tight text-center text-gray-300 lg:text-6xl"
      >
        The Calandra
        <br />
         Prototype <Strong green>P001</Strong>
      </h1>

      <P>
        After more than 14 year of design, development and engineering work, we
        can finally say that the Calandra P001 is ready.
      </P>
    </header>
  </section>

  <section class="flex flex-col items-center w-full max-w-5xl px-8 pt-32">
    <ul class="flex flex-wrap">
      {
        cards.map((card) => (
          <li class="self-stretch w-1/3 p-2">
            <ProtoypeCard {...card} />
          </li>
        ))
      }
    </ul>
  </section>

  <!-- <picture class="my-20 md:my-0">
    <img class="scale-150 md:scale-100" src="/p001.png" alt="Prototype P001" />
  </picture> -->

  <section class="relative h-[80dvh] mt-48">
    <Gallery images={images} />
  </section>
</Layout>
