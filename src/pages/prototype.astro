---
import Layout from "@layouts/Layout.astro";
import P from "@components/P.astro";
import Strong from "@components/Strong.astro";
import ProtoypeCard from "@components/CardCard.astro";

import { cards } from "prototype";
---

<Layout title="Heritage | Calandra Automobili">
  <section
    class="flex flex-col justify-center items-center w-full h-[80vh] bg-[url('/video.jpg')] bg-no-repeat bg-cover"
  >
    <header class="flex flex-col gap-8 p-6">
      <h1
        class="text-4xl font-normal leading-tight text-center text-gray-300 lg:text-6xl"
      >
        The Calandra
        <br />
         Prototype <Strong green>P001</Strong>
      </h1>

      <P>
        After more than 14 year of design, development and engineering work, we
        can finally say that the Calandra P001 is ready.
      </P>
    </header>
  </section>

  <section class="flex flex-col items-center w-full max-w-5xl px-4 pt-32">
    <ul class="gap-6 columns-2 md:columns-3 [&>li:not(:first-child)]:mt-6">
      {
        cards.map((card) => (
          <li>
            <ProtoypeCard {...card} />
          </li>
        ))
      }
    </ul>
  </section>

  <picture>
    <img src="/p001.png" alt="Prototype P001" />
  </picture>
</Layout>
