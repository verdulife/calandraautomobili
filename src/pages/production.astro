---
import Layout from "@layouts/Layout.astro";
import P from "@components/P.astro";
import Strong from "@components/Strong.astro";
import ProtoypeCard from "@components/CardCard.astro";
import Link from "@components/Link.astro";

import { cards } from "production";
import Divider from "@components/Divider.astro";
---

<Layout title="Heritage | Calandra Automobili">
  <section
    class="flex flex-col justify-center items-center w-full max-w-7xl h-[75vh] bg-[url('/inside.png')] bg-no-repeat bg-contain bg-right"
  >
    <header class="flex flex-col items-start w-full max-w-6xl gap-8">
      <h1 class="text-4xl font-normal leading-tight text-gray-300 lg:text-6xl">
        The Calandra <Strong>GP</Strong>
      </h1>

      <P left>
        Our prototype is ready for production, for further information and
        reserves, please visit our contact page.
      </P>

      <Link href="#versions">SEE VERSIONS</Link>
    </header>
  </section>

  <section class="flex flex-col items-center w-full max-w-5xl px-4 py-32">
    <ul class="gap-6 columns-2 md:columns-3 [&>li:not(:first-child)]:mt-6">
      {
        cards.map((card) => (
          <li>
            <ProtoypeCard {...card} />
          </li>
        ))
      }
    </ul>
  </section>

  <section
    id="versions"
    class="flex flex-col items-center justify-center w-full max-w-6xl"
  >
    <main class="flex flex-wrap justify-center w-full gap-12">
      <article class="flex flex-col gap-6 p-8 text-zinc-50">
        <h3 class="text-4xl text-zinc-400">Version 1</h3>
        <ul class="flex flex-col gap-4 list-disc list-inside">
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
        </ul>
      </article>

      <article class="flex flex-col gap-6 p-8 text-zinc-50">
        <h3 class="text-4xl text-zinc-400">Version 2</h3>
        <ul class="flex flex-col gap-4 list-disc list-inside">
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
          <li>V6 Ecoboost 3.5L.</li>
        </ul>
      </article>
    </main>
  </section>
</Layout>
