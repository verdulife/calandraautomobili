---
import Layout from "@layouts/Layout.astro";
import P from "@components/P.astro";
import Strong from "@components/Strong.astro";
import Gallery from "@components/Gallery.astro";
import ProtoypeCard from "@components/CarCard.astro";
import Divider from "@components/Divider.astro";
import Marquee from "@components/Marquee.astro";

import { cards } from "lib/production";
import { images } from "lib/production-images";
import { v1, v2, options } from "lib/versions";
---

<Layout title="Heritage | Calandra Automobili">
  <section
    class="relative flex flex-col justify-center items-center w-full h-screen lg:h-[80dvh]"
  >
    <span class="absolute inset-0 w-full h-full">
      <Gallery images={images} />
    </span>

    <header class="z-10 flex flex-col items-center gap-8 p-6">
      <h1 class="text-4xl font-normal leading-tight text-gray-300 lg:text-6xl">
        Calandra <Strong>GP</Strong>
      </h1>

      <P>
        Our prototype is ready for production, for further information and
        reserves, please visit our contact page.
      </P>
    </header>
  </section>

  <section class="flex flex-col items-center w-full max-w-5xl px-4 py-32">
    <ul class="flex flex-wrap justify-center w-full">
      {
        cards.map((card) => (
          <li class="self-stretch w-full md:w-1/3 p-2">
            <ProtoypeCard {...card} />
          </li>
        ))
      }
    </ul>
  </section>

  <section id="versions" class="flex flex-col justify-center w-full max-w-6xl">
    <main class="flex flex-wrap w-full gap-12 lg:justify-center">
      <article class="flex flex-col gap-6 p-8 w-full md:w-[45%]">
        <h3 class="text-4xl text-white">Version 1</h3>

        <ul class="flex flex-col text-gray-300">
          {
            v1.map((item) => (
              <li class="p-4 border-b last:border-b-0 border-zinc-800">
                {item}
              </li>
            ))
          }
        </ul>
      </article>

      <span class="hidden py-8 lg:flex">
        <Divider />
      </span>

      <article class="flex flex-col gap-6 p-8 w-full md:w-[45%]">
        <h3 class="text-4xl text-white">Version 2</h3>

        <ul class="flex flex-col text-gray-300">
          {
            v2.map((item) => (
              <li class="p-4 border-b last:border-b-0 border-zinc-800">
                {item}
              </li>
            ))
          }
        </ul>
      </article>
    </main>

    <footer class="flex flex-col items-center w-full gap-6 pt-20 pb-40">
      <h3 class="text-4xl text-white">Options</h3>
      <div class="flex flex-col w-full gap-2">
        <Marquee items={options} />
        <Marquee items={options} reverse />
      </div>

      <picture class="mt-20 -mb-20">
        <img
          class="scale-150 md:scale-100"
          src="/p001.jpg"
          alt="Prototype P001"
        />
      </picture>
    </footer>
  </section>
</Layout>
