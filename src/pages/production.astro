---
import Layout from "@layouts/Layout.astro";
import P from "@components/P.astro";
import Strong from "@components/Strong.astro";
import ProtoypeCard from "@components/CarCard.astro";
import Link from "@components/Link.astro";
import Divider from "@components/Divider.astro";
import Marquee from "@components/Marquee.astro";

import { cards } from "production";
import { v1, v2, options } from "versions";
---

<Layout title="Heritage | Calandra Automobili">
  <section
    class="flex flex-col justify-center items-center w-full max-w-7xl h-[80dvh] bg-[url('/inside.png')] bg-no-repeat bg-contain bg-right-bottom"
  >
    <header class="flex flex-col items-start w-full max-w-6xl gap-8 p-6">
      <h1 class="text-4xl font-normal leading-tight text-gray-300 lg:text-6xl">
        The Calandra <Strong>GP</Strong>
      </h1>

      <P left>
        Our prototype is ready for production, for further information and
        reserves, please visit our contact page.
      </P>

      <Link href="#versions">SEE VERSIONS</Link>
    </header>
  </section>

  <section class="flex flex-col items-center w-full max-w-5xl py-32 px-4">
    <ul class="gap-6 columns-1 md:columns-3 [&>li:not(:first-child)]:mt-6">
      {
        cards.map((card) => (
          <li>
            <ProtoypeCard {...card} />
          </li>
        ))
      }
    </ul>
  </section>

  <section id="versions" class="flex flex-col justify-center w-full max-w-6xl">
    <main class="flex flex-wrap lg:justify-center w-full gap-12">
      <article class="flex flex-col gap-6 p-8">
        <h3 class="text-4xl text-white">Version 1</h3>

        <ul class="flex flex-col text-gray-300">
          {
            v1.map((item) => (
              <li class="p-4 border-b last:border-b-0 border-zinc-800">
                {item}
              </li>
            ))
          }
        </ul>
      </article>

      <span class="hidden lg:flex py-8">
        <Divider />
      </span>

      <article class="flex flex-col gap-6 p-8">
        <h3 class="text-4xl text-white">Version 2</h3>

        <ul class="flex flex-col text-gray-300">
          {
            v2.map((item) => (
              <li class="p-4 border-b last:border-b-0 border-zinc-800">
                {item}
              </li>
            ))
          }
        </ul>
      </article>
    </main>

    <footer class="flex flex-col items-center w-full gap-6 py-20">
      <h3 class="text-4xl text-white">Options</h3>
      <div class="flex flex-col gap-2 w-full">
        <Marquee items={options} />
        <Marquee items={options} reverse />
      </div>
    </footer>
  </section>
</Layout>
